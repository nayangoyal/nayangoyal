#include<stdio.h>
#include<string.h>

int main()
{
    int n,i;
    char a[100];
    scanf("%d", &n);
    for(i=1;i<=n;i++)
    {
      scanf("%s",&a);
      int l=strlen(a);

     if(l>10)
     {

       printf("%c",a[0]);
       printf("%d",l-2);
       printf("%c\n",a[l-1]);

     }else
      { 
       printf("%s\n",a);
      }
    }

    return 0;
}
